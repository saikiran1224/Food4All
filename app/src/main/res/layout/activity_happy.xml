<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.donor.DonorCelebrate"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              Celebrate\nHappy Moments with Us!"
        android:textColor="#000"
        android:lineHeight="35dp"
        android:layout_gravity="center_horizontal"
        android:textSize="27dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/hands"
            android:layout_marginTop="15dp"></ImageView>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/donname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="25dp"
            android:inputType="text"
            android:hint="Name of Donor"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/donphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="10"
            android:layout_margin="25dp"
            android:inputType="number"
            android:hint="Donor Phone Number"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/donemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="25dp"
            android:inputType="textEmailAddress"
            android:hint="Donor Email ID"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-25dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/donaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="25dp"
            android:inputType="textPostalAddress"
            android:hint="Donor Address"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="28dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/button_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/celebdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/open_sans"
                android:hint="Date of Celebration"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewup"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_date_range_black_24dp" />
        </LinearLayout>

    <Spinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/button_1"
        android:entries="@array/recipient"
        android:padding="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/donmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="25dp"
            android:inputType="number"
            android:hint="Donation Money"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:layout_marginBottom="25dp"
        android:textColor="#fff"></Button>
    </LinearLayout>

</ScrollView>